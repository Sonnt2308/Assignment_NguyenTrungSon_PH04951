<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_key_class"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Tên Sinh viên: "/>

        <EditText
            android:id="@+id/edt_key_class1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"     />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name_class"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            />

        <EditText
            android:maxLength="8"
            android:inputType="number"
            android:hint="DD/MM/YYYY"
            android:id="@+id/edt_name_class1"
            android:layout_alignParentLeft="true"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_malop1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Lớp: "/>

        <Spinner
            android:id="@+id/spn_class1"
            android:layout_width="272dp"
            android:layout_height="45dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_dialog_clear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Xóa Trắng"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_dialog_save1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lưu thay đổi"
            android:layout_weight="1"/>

    </LinearLayout>
    <DatePicker
        android:id="@+id/Datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </DatePicker>

</LinearLayout>
